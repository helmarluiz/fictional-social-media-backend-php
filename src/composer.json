{
    "name": "helmarluiz/supermetrics",
    "description": "Supermetrics Backend Project",
    "type": "project",
    "license": "MIT",
    "require": {
      "php": "^8.1",
      "ext-curl": "*",
        "vlucas/phpdotenv": "^5.4",
      "ext-pdo": "*"
    },
    "require-dev": {
      "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "authors": [
        {
            "name": "Helmar Luiz",
            "email": "helmarluizjr@gmail.com"
        }
    ],
    "scripts": {
      "format": "vendor/bin/phpcbf --standard=PSR12",
      "phpstan": "./vendor/bin/phpstan analyse --level 5 app config tests > ./logs/phpstan_results.txt",
      "tests": "vendor/bin/phpunit --colors=always --testdox --verbose tests/"
    }
  }
